<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/navigation_home">

    <fragment
        android:id="@+id/playerFragment"
        android:name="com.example.hiroshi.rxtubeapp.ui.player.PlayerFragment"
        android:label="PlayerFragment" />
    <fragment
        android:id="@+id/searchItemsFragment"
        android:name="com.example.hiroshi.rxtubeapp.ui.searchitems.SearchItemsFragment"
        android:label="SearchItemsFragment" >
        <action
            android:id="@+id/action_searchItemsFragment_to_playerFragment"
            app:destination="@id/playerFragment" />
    </fragment>
    <fragment
        android:id="@+id/navigation_search"
        android:name="com.example.hiroshi.rxtubeapp.ui.searchcondition.SearchConditionFragment"
        android:label="SearchConditionFragment" >
        <action
            android:id="@+id/action_searchConditionFragment_to_searchItemsFragment"
            app:destination="@id/searchItemsFragment" />
    </fragment>
    <fragment
        android:id="@+id/navigation_home"
        android:name="com.example.hiroshi.rxtubeapp.ui.home.HomeFragment"
        android:label="HomeFragment" >
        <action
            android:id="@+id/action_navigation_home_to_playerFragment2"
            app:destination="@id/playerFragment" />
    </fragment>
</navigation>